@model ISeeYou.Web.Models.Security.ChangePasswordModel

<div class="container">
<h3>Change password</h3>

@using (Html.BeginForm("ChangePasswordPost", "Account", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

        <div class="control-group">
              
            @Html.LabelFor(m => m.OldPassword,new{@class="control-label"})
            <div class="controls">
                @Html.PasswordFor(m => m.OldPassword)
            </div>
        </div>
        <div class="control-group">
              
            @Html.LabelFor(m => m.NewPassword,new{@class="control-label"})
            <div class="controls">
                @Html.PasswordFor(m => m.NewPassword)
            </div>
        </div>
        <div class="control-group">
              
            @Html.LabelFor(m => m.NewPasswordConfirm,new{@class="control-label"})
            <div class="controls">
                @Html.PasswordFor(m => m.NewPasswordConfirm)
            </div>
        </div>
        <div class="form-actions">
             
        <input type="submit" class="btn btn-primary" value="Change password" />
        </div>
}
    </div>