<script type="text/javascript">
    $(document).ready(function () {
        var page = 1;
        var msnry = null;
        var $loading = $('#loading').hide();

        loadItems();

        //$loading.show();
        var container = $("#masonry-container");
        //container.imagesLoaded(function () {
