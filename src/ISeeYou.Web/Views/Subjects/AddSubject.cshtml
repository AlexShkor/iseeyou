@model ISeeYou.Web.Controllers.SubjectViewModel

<div class="row">
    <div class="col-md-6 col-md-offset-3 well">
        <form method="POST" role="form" action="/subjects/addSubject">
            <div class="form-group">
                <label for="SubjectUrl">Введите адресную строку пользователя (адрес домашней страницы)</label>
                <input id="SubjectUrl" type="text" name="SubjectUrl" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">Добавить</button>
        </form>
    </div>
</div>